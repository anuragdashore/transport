<% if current_user.has_role? :manager %>
	<h1>Your Bookings</h1><br />
	<div class="me-5">
		<table class="table table-striped table-bordered">
			<thead>
				<th>pickup_address</th>
				<th>pickup_city</th>
				<th>pickup_state</th>
				<th>pickup_date</th>
				<th>pickup_timing</th>
				<th>deliver_address</th>
				<th>deliver_city</th>
				<th>deliver_state</th>
				<th>Show Bookings</th>
			</thead>
			<tbody>
				<tr>
					<% @bookings.each do |booking| %>
					<td>
						<%= booking.pickup_address %>
					</td>
					<td>
						<%= booking.pickup_city %>
					</td>
					<td>
						<%= booking.pickup_state %>
					</td>
					<td>
						<%= booking.pickup_date %>
					</td>
					<td>
						<%= booking.pickup_timing %>
					</td>
					<td>
						<%= booking.deliver_address %>
					</td>
					<td>
						<%= booking.deliver_city %>
					</td>
					<td>
						<%= booking.deliver_state %>
					</td>
					<td>
						<%= link_to "Show", booking, class: "btn btn-primary" %>
					</td>
				</tr>
					<% end %>
			</tbody>
		</table>
	</div>
	<%= paginate @bookings %>
