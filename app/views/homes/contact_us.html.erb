<center>
  <section style="background-color: #508bfc;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-15 col-md-8 col-lg-8 col-xl-5">
          <div class="card shadow-2-strong" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
              <h2 class="mb-4 pb-2 pb-md-0 mb-md-5">Contact Us</h2>
              <p class="text-center w-responsive mx-auto mb-5">Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within
                  a matter of hours to help you.</p>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-outline mb-4">
                          <label for="name" class="">Your name</label>
                          <input class="form-control">
                        </div>
                        <div class="form-outline mb-4">
                          <label for="email" class="">Your email</label>
                          <input class="form-control">
                        </div>
            	        </div>
            	      </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-outline mb-4">
                          <label for="subject" class="">Subject</label>
                          <input class="form-control">
                        </div>
                      </div>
            	      </div>
            	      <div class="row">
            	        <div class="col-md-12">
            	          <div class="form-outline mb-4">
            	            <label for="message">Your message</label>
            	            <textarea class="form-control md-textarea"></textarea>
            	          </div>
            	        </div>
            	      </div>
            	    </form><br>
                  <div class="text-center text-md-left">
                    <%= link_to "Send", contact_us_path, class:"btn btn-dark" %>
                  </div>
            	  </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</center>