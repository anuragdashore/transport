<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
   
    <script src="/assets/jquery.js" type="text/javascript"></script>
    <script src="/assets/jquery_ujs.js" type="text/javascript"></script>

    <title>Kalpvriksha Transportation System</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg" style="background-color: #e3f2fd;">
      <div class="container-fluid">
        <div class="logo">
          <img src="<%= asset_path("kalpvriksha.png") %>" width="12%" height="50vh">
          <a class="navbar-brand mb-0 h1" href="<%= root_path %>">Kalpvriksha Transportation System</a>
        </div>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <%= link_to "Home", root_path, class:"nav-link" %>
              <!-- <a class="nav-link active" aria-current="page" href="<%= root_path %>">Home</a> -->
            </li>
            <li class="nav-item">
              <%= link_to "What we do", about_us_path, class:"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Services", service_path, class:"nav-link" %>
            </li>
            <li class="nav-item"> 
              <%= link_to "Contact us", contact_us_path, class:"nav-link" %>  
            </li>
          </ul>
          <div>
            <% if user_signed_in? %>
              <%= link_to "Your Bookings", bookings_path(user_id: current_user.id), class: "btn btn-primary me-3" %>
              <%= link_to "New Booking", new_booking_path(user_id: current_user.id), class: "btn btn-primary me-3" %>
              <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: :"Are You Sure?"}, class: "btn btn-dark" %>
            <% else %>
              <%= link_to "Login", new_user_session_path, class: "btn btn-outline-primary me-2" %>
              <%= link_to "Register", new_user_registration_path, class: "btn btn-outline-primary me-4" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
  <%= yield %>
  </body>
</html>