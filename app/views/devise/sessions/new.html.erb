<center>
  <section style="background-color: #508bfc;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-15 col-md-8 col-lg-8 col-xl-5">
          <div class="card shadow-2-strong" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
              <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
              <p class="text-black-50 mb-5">Please enter your login and password!</p>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-outline form-black mb-4">
                  <%= f.label :email, class: "form-label" %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>

                <div class="form-outline form-black mb-4">
                  <%= f.label :password, class: "form-label" %><br />
                  <%= f.password_field :password, autocomplete: "current-password" %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="form-outline form-black mb-4">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>

                <div class="btn btn-outline">
                  <%= f.submit "Log in",class:"btn btn-dark" %>
                </div>
                <div class="text-black-50 fw-bold">
                  <p class="mb-0">Don't have an account?<%= render "devise/shared/links" %></p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div> 
  </section>         
</center>