<h1>Your Data</h1>

<table class="table table-striped table-bordered">
	<thead>
		<th>id</th>
		<th>User_Name</th>
		<th>Contact_no</th>
		<th>Email</th>
		<th>Age</th>
		<th>Gender</th>
		<th>Role</th>
		<th>Bookings</th>
		<th>Edit</th>
		<th>Delete</th>
	</thead>
	<tbody>
		<tr>
			<td>
				<%= @user.id %>
				</td>
			<td>
				<%= @user.name %>
			</td>
			<td>
				<%= @user.contact %>
			</td>
			<td>
				<%= @user.email %>
			</td>
			<td>
				<%= @user.age %>
			</td>
			<td>
				<%= @user.gender %>
			</td>
			<td>
				<%= @user.role_id %><br>
			</td>
			<td>
       	<%= link_to "Show", bookings_path(user_id: current_user.id), class: "btn btn-primary me-3" %>
      </td>
			<td>
				<%= link_to "Edit", edit_user_path, class: "btn btn-primary" %><br>
			</td>
			<td>
				<%= link_to "Destroy", users_path(@user), data: {turbo_method: :delete, turbo_confirm: :"Are You Sure?"}, class: "btn btn-primary" %>
			</td>
		</tr>
	</tbody>
</table><br>