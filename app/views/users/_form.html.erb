<center>
  <section style="background-color: #508bfc;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-15 col-md-8 col-lg-8 col-xl-5">
          <div class="card shadow-2-strong" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
            	<h2 class="mb-4 pb-2 pb-md-0 mb-md-5">Edit User</h2>
							<%= form_with model: @user do |form| %>
								<div>
									<%= form.label :name %><br>
									<%= form.text_field :name %>
									<% @user.errors.full_messages_for(:name).each do |message| %>
							      <div><%= message %></div>
							    <% end %>
								</div><br>

								<div>
									<%= form.label :contact %><br>
									<%= form.text_field :contact %>
									<% @user.errors.full_messages_for(:contact).each do |message| %>
										<div><%= message %></div>
									<% end %>
								</div><br>

								<div>
									<%= form.label :age %><br>
									<%= form.text_field :age %>
									<% @user.errors.full_messages_for(:age).each do |message| %>
										<div><%= message %></div>
									<% end %>
								</div><br>

								<div>
									<%= form.label :gender %><br>
									<%= form.text_field :gender %>
									<% @user.errors.full_messages_for(:gender).each do |message| %>
										<div><%= message %></div>
									<% end %>
								</div><br>

								<div>
									<%= form.label :role %><br>
									<%= form.text_field :role %>
									<% @user.errors.full_messages_for(:role).each do |message| %>
										<div><%= message %></div>
									<% end %>
								</div><br>

								<div>
									<%= form.submit %>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</center>