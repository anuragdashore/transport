<%= search_form_for @q do |form| %>
	<div class="form-group m-3 d-flex justify-content-end align-items-center">
		<b>Search</b><%= form.search_field :name_cont, class:"form-control m-2", style:"width:20%" %>
		<%= form.submit class:"btn btn-primary" %>
	</div>
<% end %>

<h2>Users</h2>
<div class="me-5">
	<table class="table table-striped table-bordered">
		<tr>
			<th>id</th>
			<th>User_Name</th>
			<th>Contact_no</th>
			<th>Age</th>
			<th>Gender</th>
			<th>Role</th>
			<th>User</th>
		</tr>
			<tr>
				<% @users.each do |user| %>
					<td>
						<%= user.id %>
					</td>
					<td>
						<%= user.name %>
					</td>
					<td>
						<%= user.contact %>
					</td>
					<td>
						<%= user.age %>
					</td>
					<td>
						<%= user.gender %>
					</td>
					<td>
						<%= user.role %><br>
					</td>
					<td>
						<%= link_to "Show", user, class: "btn btn-primary" %>
					</td>
			</tr>
				<% end %>
	</table>
</div>