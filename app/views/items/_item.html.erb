<div class="me-5">
	<table class="table table-striped table-bordered">
		<thead>
			<th>Name</th>
			<th>Weight</th>
			<th>Size</th>
			<th>Delete</th>
		</thead>
		<tbody>
			<tr>
				<% @booking.items.each do |item| %>
					<td><%= item.item_name %></td>
					<td><%= item.item_weight %></td>
					<td><%= item.item_size %></td>
					<td><%= button_to "Destroy", [ item.booking, item ], :method => :delete, data: { turbo_confirm: "Are You Sure?" }, class: "btn btn-primary" %></td>
			</tr>
				<% end %>
		</tbody>
	</table>
</div>